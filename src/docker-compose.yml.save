version: '2'

services:

  web:
    build:
      context: .
      dockerfile: aspnetcore.dockerfile
    ports:
     - "5000:5000"
    networks:
      - aspnetcoreapp-network

  postgres:
    build:
      context: .
      dockerfile: postgres.dockerfile
    volumes:
      - postgre-data:/var/run/docker/volumedriver/azurefile/nyclandmarks
    environment:
      POSTGRES_PASSWORD: password
    networks:
      - aspnetcoreapp-network


volumes:
  postgre-data:
    driver: azurefile

networks:
  aspnetcoreapp-network:
    driver: bridge



